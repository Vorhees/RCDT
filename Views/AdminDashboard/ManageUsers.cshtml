@model IEnumerable<RCDT.Models.ApplicationUser>
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Manage Users";
}

<!-- Main content -->
<section class="content">
    <div class="row">
    <div class="col-md-11">
        <div class="box">
        <div class="box-header">
            <h3 class="box-title">Manage Users</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Options</th>
                </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        @if (user.Role != "Participant")
                        {
                            <tr>
                            <td>@Html.DisplayFor(modelItem => user.UserName)</td>
                            <td>@Html.DisplayFor(modelItem => user.Email)</td>
                            <td>@Html.DisplayFor(modelItem => user.Role)</td>
                            <td>
                                <a asp-action="EditUser" asp-route-id="@user.Email">Edit</a>
                            </td>
                            </tr>
                        }
                    }
                </table>

                <table id="example2" class="table table-bordered table-striped">
                <thead>
                <tr>
                    <th>User ID</th>
                    <th>Session Key</th>
                    <th>Role</th>
                    <th>Options</th>
                </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        @if (user.Role == "Participant")
                        {
                            <tr>
                            <td>@Html.DisplayFor(modelItem => user.ParticipantUserId)</td>
                            <td>@Html.DisplayFor(modelItem => user.UserName)</td>
                            <td>@Html.DisplayFor(modelItem => user.Role)</td>
                            <td>
                                <a asp-action="EditUser" asp-route-id="@user.UserName">Edit</a>
                            </td>
                            </tr>
                        }
                    }
                </table>
        </div>
        <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
    </div>
    <!-- /.row -->
</section>