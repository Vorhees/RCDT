@model RCDT.Models.ApplicationUser
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Edit Users";
}

<script>
    function toggleUsernameEdit()
    {
        var editUsername = document.getElementById("username");
        editUsername.style.display = (editUsername.style.display == "form-group") ? "none" : "form-group";
    }
</script>

<div class="container">
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4" style="margin-top:150px">
        <h5>Current Username: @Model.UserName</h5>  
        <h5>Current Email: @Model.Email</h5>  
            <form asp-action="EditUser">  
                <div id="username" class="form-group">  
                    <input required name="UserName" class="form-control" placeholder="Enter new Username" />  
                    <span asp-validation-for="UserName" class="text-danger"></span>  
                </div>  
                <div id="email" class="form-group">  
                    <input required name="Email" class="form-control" placeholder="Enter new Email" />  
                    <span asp-validation-for="Email" class="text-danger"></span>  
                </div>  
                <div id="password" class="form-group">   
                    <input required name="PasswordHash" class="form-control" placeholder="Enter new Password" />  
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>  
                </div>        
                <div class="form-group text-center">
                    <button type="submit" value="Save" class="btn btn-success form-control mb-2"> Save Changes
                    </button>
                    <button class="btn btn-primary form-control" type="button" onclick="location.href='@Url.Action("ManageUsers" , "AdminDashboard")'"> Cancel
                    </button>
                </div>  
            </form>
        </div>
    </div>  
</div>