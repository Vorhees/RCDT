@model RCDT.Models.ApplicationUser

@{
    ViewData["Title"] = "Edit Users";
}

<h4>Edit User: @Model.UserName</h4>  
<h4>Current Email: @Model.Email</h4>  
<hr />  
<div class="row">  
    <div class="col-md-4">  
        <form asp-action="EditUser">  
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>  
            <div class="form-group">  
                <input required name="UserName" class="form-control" placeholder="Enter new Username" />  
                <span asp-validation-for="UserName" class="text-danger"></span>  
            </div>  
            <div class="form-group">  
                <input required name="Email" class="form-control" placeholder="Enter new Email" />  
                <span asp-validation-for="Email" class="text-danger"></span>  
            </div>  
            <!--
            <div class="form-group">   
                <input required name="PasswordHash" class="form-control" placeholder="Enter new Password" />  
                <span asp-validation-for="PasswordHash" class="text-danger"></span>  
            </div>   
            --->           
            <div class="form-group">  
                <input type="submit" value="Save" class="btn btn-default" />  
            </div>  
        </form>  
    </div>  
</div>  
<div>  
    <a asp-action="ManageUsers">Back to table</a>  
</div>  