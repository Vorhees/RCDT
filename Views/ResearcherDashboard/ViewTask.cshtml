@model IEnumerable<RCDT.Models.ChatLog>

@{
    ViewData["Title"] = "View Task Log";
}

<section class="content">
    <div class="row">
    <div class="col-md-11">
        <div class="box">
        <div class="box-header">
            <h3 class="box-title">View Task Log</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
                <table id="example1" class="table table-hover">
                <thead>
                <tr>
                    <th>Task Session ID</th>
                    <th>Username</th>
                    <th>Time</th>
                    <th>Message</th>
                    <th>Message ID</th>
                </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                        <td>@Html.DisplayFor(modelItem => user.TaskSessionId)</td>
                        <td>@Html.DisplayFor(modelItem => user.UserName)</td>
                        <td>@Html.DisplayFor(modelItem => user.dateTime)</td>
                        <td>@Html.DisplayFor(modelItem => user.Message)</td>
                        <td>@Html.DisplayFor(modelItem => user.MessageId)</td>
                        </tr>
                    }
                </table>
            </div>
        <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
    </div>
    <!-- /.row -->
</section>