@model IEnumerable<RCDT.Models.ChessBoardMoveLog>

@{
    ViewData["Title"] = "View Move Log";
}
<section class="content">
    <div class="row">
    <div class="col-md-11">
        <div class="box">
        <div class="box-header">
            <h3 class="box-title">View Task Move Log</h3>
        </div>
        <div class="box-body">
                <table id="example1" class="table table-hover">
                <thead>
                <tr>
                    <th>Task Session ID</th>
                    <th>Username</th>
                    <th>Time</th>
                    <th>BoardState</th>
                </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                        <td>@Html.DisplayFor(modelItem => TaskSessionId)</td>
                        <td>@Html.DisplayFor(modelItem => UserName)</td>
                        <td>@Html.DisplayFor(modelItem => dateTime)</td>
                        <td>@Html.DisplayFor(modelItem => BoardState)</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
    </div>
</section>
