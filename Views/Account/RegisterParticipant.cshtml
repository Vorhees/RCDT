@model RegisterViewModel
@{
    ViewData["Title"] = "Registration Page";
}

@using (Html.BeginForm("RegisterParticipant", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
<div class="container">
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4" style="margin-top:150px">
      <h3>Register User</h3>
      <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
          <input type="email" class="form-control" required name="email" placeholder="Enter Email">
          <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
          <input type="password" class="form-control" required name="password" placeholder="Enter Password">
          <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
          <input type="confirmpassword" class="form-control" required name="confirmpassword" placeholder="Re-enter Password">
          <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
        @Html.DropDownList("UserRoles", (SelectList)ViewBag.Name, new { style = "width: 100%"})
        </div>
        <div class="form-group text-center">
        <button type="submit" class="btn btn-primary form-control mb-2">
          Submit
        </button>
        <button class="btn btn-primary form-control" type="button" onclick="location.href='@Url.Action("Index" , "ResearcherDashboard")'"> Cancel
        </button>
      </div>
      </form>
    </div>
    <div class="col-md-4"></div>
  </div>
</div>
}